<div>
  <h3>Edit <%= @category.title %></h3>
  <form method="post" action="/category/<%= @id %>/edit">
    <label>Category Title: </label>
    <input name="cat_title" type="text" value="<%= @category.title %>"><br>
    <label>Allotted Monthly Funds for Category: </label>
    <input name="cat_allotted_funds" type="number" value="<%= @category.amount %>"><br>
    <button class="btn" type="submit">Update Category</button>
  </form>
  <form method="post" action="/category/<%= @id %>/delete">
    <button class="btn stacked-btn" type="submit">Delete Category</button>
  </form>
  
</div>

<div>
  <h3>Add Transaction:</h3>
  <form method="post" action="/transaction/create">
    <label for="category">Category:</label>
    <select name="category">
      <% @budget.categories.each do |category| %>
        <option value="<%= category.title %>"><%= category.title %></option>        
      <% end %>
    </select>
    <label>Description:</label>
    <input name="description" type="text">
    <label>Transaction Amount:</label>
    <input name="transaction_amt" type="number">
    <button class="btn" type="submit">Add Transaction</button>
  </form>
</div>

<div>
  <h3><%= @category.title %> Transactions:</h3>
  <ul>
    <% @category.transactions.each do |transaction| %>
      <li>
        <%= transaction.amount %>
        <%= transaction.description %>
      </li>
    <% end %>
  </ul>
</div>